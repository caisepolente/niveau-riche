<p id="notice"><%= notice %></p>

<h1>Submarines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type submarine</th>
      <th>Price day</th>
      <th>Image url</th>
      <th>Description</th>
      <th>Max number of guests</th>
      <th>Port</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submarines.each do |submarine| %>
      <tr>
        <td><%= submarine.name %></td>
        <td><%= submarine.type_submarine %></td>
        <td><%= submarine.price_day %></td>
        <td><%= submarine.image_url %></td>
        <td><%= submarine.description %></td>
        <td><%= submarine.max_number_of_guests %></td>
        <td><%= submarine.port %></td>
        <td><%= link_to 'Show', submarine %></td>
        <td><%= link_to 'Edit', edit_submarine_path(submarine) %></td>
        <td><%= link_to 'Destroy', submarine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

