<p id="notice"><%= notice %></p>
<div class="homepage-jumbotron">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-2">

      </div>
      <div class="col-xs-10">
        <div class="form-group pull-right">
          <a class="btn btn-lg button-transparent" href="submarines/new" style="color: white">
            Become a Host
          </a>
          <a class="btn btn-lg button-transparent" href="ports/new" style="color: white">
            Add a port
          </a>
          <a class="btn btn-lg button-transparent" href="bookings" style="color: white">
            My bookings
          </a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <h1>BONING IN THE OCEAN</h1>
        <br />
        <h3>Book submarines from local hosts in 191+ countries and experience a place from another world.</h3>
      </div>
    </div>
  </div>
</div>
<%= form_tag("/ports/test_availability", method: "post") do %>
  <%= text_field_tag(:desired_port) %>
  <%= text_field_tag(:desired_start_at) %>
  <%= text_field_tag(:desired_end_at) %>
  <%= text_field_tag(:desired_num_guests) %>
  <%= submit_tag("Test Search") %>
<% end %>
<div class="row homepage-band center-block">
  <div class="col-xs-12">
    <div class="">
      <form class="form">
        <div class="col-xs-3">
          <input type="text" class="form-control" placeholder="Port">
        </div>
        <div class="col-xs-2">
          <input type="text" class="form-control" placeholder="From">
        </div>
        <div class="col-xs-2">
          <input type="text" class="form-control" placeholder="To">
        </div>
        <div class="col-xs-2">
          <input type="text" class="form-control" placeholder="1 Guest">
        </div>
        <div class="col-xs-2">

          <%= link_to 'Search', {}, {class: "btn button-transparent"} %>

        </div>
      </form>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <% @ports.each do |port| %>
      <div class="col-md-4 col-sm-6">
        <div class="panel panel-default">
          <%= image_tag(port.image_url, {class: "center-block", style:"width: 100%; height: auto"}) %>
          <%= link_to "Show #{port.name}",  controller: "ports", action: "show", id: port.id %>
        </div>
      </div>
    <% end %>
  </div>
</div>
