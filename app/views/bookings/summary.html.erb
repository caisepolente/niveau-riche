<div class="container">
  <h1>Booking summary</h1>

  <%= form_for(@booking) do |f| %>
    <% if @booking.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

        <ul>
        <% @booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :submarine  %>
      <%= f.hidden_field :submarine_id %>
      <%= @booking.submarine.name  %>
    </div>

    <div class="field">
      <%= f.label :start_at %>
      <%= f.hidden_field :start_at %>
      <%= @booking.start_at %>
    </div>

    <div class="field">
      <%= f.label :end_at %>
      <%= f.hidden_field :end_at %>
      <%= @booking.end_at %>
    </div>

    <div class="field">
      <%= f.label :total_price %>
      <%= f.hidden_field :total_price %>
      <%= @booking.total_price %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

</div>
